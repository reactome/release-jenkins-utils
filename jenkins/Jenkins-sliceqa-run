// This Jenkinsfile is used by Jenkins to run the Commit Stats Files step of Reactome's release.
// It commits a few files produced during Release to GitHub for posterity.

import org.reactome.release.jenkins.utilities.Utilities

// Shared library maintained at 'release-jenkins-utils' repository.
def utils = new Utilities()

pipeline {
	agent any

	stages {
		stage('Install test slice on release'){
			steps{
				script{
					sh "echo load-database"
					def releaseVersion =  timeout(time:60, unit:'SECONDS') {input(
                                            id: 'releaseVersion', message: 'Version Required', parameters: [
                                                  [$class: 'NumberParameterDefinition', defaultValue: '', description: 'ReleaseVersion', name: 'version'],
                                                ])
                                        }
					sh "echo ${releaseVersion}"
				}
			}
		}
	}		
}
